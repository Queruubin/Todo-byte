generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String @id @default(uuid())
  nombre      String
  correo      String @unique
  contrase√±a String

  categorias  Categoria[]
  tareas      Tarea[]
  historiales HistorialTarea[]
}

model Tarea {
  id             String           @id @default(uuid())
  titulo         String
  descripcion    String
  fechaLimite    DateTime
  completada     Boolean          @default(false)
  dificultad     String           @default("Facil")
  prioridad      String           @default("Low")
  usuarioId      String
  usuario        Usuario          @relation(fields: [usuarioId], references: [id])
  categoriaId    String
  categoria      Categoria        @relation(fields: [categoriaId], references: [id])
  tareaPadreId   String?
  tareaPadre     Tarea?           @relation("Subtareas", fields: [tareaPadreId], references: [id])
  subtareas      Tarea[]          @relation("Subtareas")
  HistorialTarea HistorialTarea[]
}

model Categoria {
  id        String  @id @default(uuid())
  nombre    String
  usuarioId String
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  Tarea     Tarea[]
}

model HistorialTarea {
  id            String   @id @default(uuid())
  tareaId       String
  tarea         Tarea    @relation(fields: [tareaId], references: [id])
  usuarioId     String
  usuario       Usuario  @relation(fields: [usuarioId], references: [id])
  tipoEvento    String // CREACION, EDICION, FINALIZACION
  campo         String? //para ediciones
  valorAnterior String?
  valorNuevo    String?
  fecha         DateTime @default(now())
}
