generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String      @id @default(uuid())
  nombre     String
  correo     String      @unique
  contrase√±a String

  categorias Categoria[]
  tareas     Tarea[]
  historiales HistorialTarea[]
}


model Tarea {
  id            String     @id @default(uuid())
  titulo        String
  descripcion   String
  fechaLimite   DateTime
  completada    Boolean    @default(false)
  prioridad     String
  usuarioId     String
  usuario       Usuario    @relation(fields: [usuarioId], references: [id])
  categoriaId   String?
  categoria     Categoria? @relation(fields: [categoriaId], references: [id])
  etiquetas     TareaEtiqueta[]
  tareaPadreId  String?
  tareaPadre    Tarea?     @relation("Subtareas", fields: [tareaPadreId], references: [id])
  subtareas     Tarea[]    @relation("Subtareas")
  
  historiales   HistorialTarea[]
}

model Categoria {
  id        String   @id @default(uuid())
  nombre    String
  usuarioId String
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  tareas    Tarea[]
}

model Etiqueta {
  id     String  @id @default(uuid())
  nombre String  @unique

  tareas TareaEtiqueta[]
}

model TareaEtiqueta {
  id         String   @id @default(uuid())
  tarea      Tarea    @relation(fields: [tareaId], references: [id])
  tareaId    String
  etiqueta   Etiqueta @relation(fields: [etiquetaId], references: [id])
  etiquetaId String
}

model HistorialTarea {
  id            String   @id @default(uuid())
  tareaId       String
  tarea         Tarea    @relation(fields: [tareaId], references: [id])
  usuarioId     String
  usuario       Usuario  @relation(fields: [usuarioId], references: [id])
  tipoEvento    String   // CREACION, EDICION, FINALIZACION
  campo         String?  //para ediciones
  valorAnterior String?
  valorNuevo    String?
  fecha         DateTime @default(now())
}




